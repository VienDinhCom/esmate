{
  "name": "@esmate/react",
  "description": "React components, hooks, and styles in one package.",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/viendinhcom/esmate.git"
  },
  "exports": {
    "./components/*": {
      "import": "./dist/components/*.js",
      "types": "./dist/components/*.d.ts"
    },
    "./components/ui/*": {
      "import": "./dist/components/ui/*.js",
      "types": "./dist/components/ui/*.d.ts"
    },
    "./hooks/*": {
      "import": "./dist/hooks/*.js",
      "types": "./dist/hooks/*.d.ts"
    },
    "./styles/*.css": {
      "style": "./dist/styles/*.css"
    },
    "./lib/*": {
      "import": "./dist/lib/*.js",
      "types": "./dist/lib/*.d.ts"
    },
    "./pkgs/*": {
      "import": "./dist/pkgs/*.js",
      "types": "./dist/pkgs/*.d.ts"
    }
  },
  "scripts": {
    "build": "rslib build",
    "dev": "rslib build --watch"
  },
  "dependencies": {},
  "devDependencies": {
    "esmate": "workspace:*",
    "@esmate/eslint": "workspace:*",
    "@esmate/prettier": "workspace:*",
    "@rslib/core": "^0.7.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.18.7",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "fs-extra": "^11.3.2",
    "globby": "^14.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  },
  "files": ["dist"],
  "keywords": ["esmate", "react", "components", "hooks", "styles", "ui", "utils", "typescript"]
}
