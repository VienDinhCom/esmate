{
  "name": "esmate",
  "type": "module",
  "version": "1.0.0",
  "description": "Uncomplicate JavaScript",
  "private": true,
  "scripts": {
    "fix": "turbo run --filter='./packages/*' fix",
    "check": "turbo run --filter='./packages/*' check",
    "dev": "turbo run --filter='./packages/*' dev",
    "build": "turbo run --filter='./packages/*' build",
    "release": "changeset version && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "turbo": "^2.5.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
