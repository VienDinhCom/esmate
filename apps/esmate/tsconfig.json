{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",

    "target": "es2016",
    "lib": ["ES2020"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,

    "sourceMap": false,
    "declaration": true

    // "baseUrl": ".",
